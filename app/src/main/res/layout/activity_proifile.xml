<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProifileActivity">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbarProfile"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Tài khoản của tôi"
        android:background="#CC1A1A"
        >
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolbarProfile"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/baseline_person_outline_24"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Name"
            android:textColor="#000"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#B86100"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_person_outline_24"
            android:layout_marginTop="240dp"
            android:layout_marginLeft="25dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="-25dp"
            />

        <TextView
            android:id="@+id/tvFullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Võ Qúi Nam"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="-25dp"
            />
        <View
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:background="#CDC6C6"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_phone_24"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="25dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Telephone"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="-25dp"
            />

        <TextView
            android:id="@+id/tvPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0935386123"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="-25dp"
            />
        <View
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:background="#CDC6C6"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_email_24"
            android:layout_marginTop="360dp"
            android:layout_marginLeft="25dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="-25dp"
            />

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user@gmail.com"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="-25dp"
            />
        <View
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:background="#CDC6C6"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_location_on_24"
            android:layout_marginTop="420dp"
            android:layout_marginLeft="25dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="-25dp"
            />

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tây ninh"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="-25dp"
            />
        <View
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:background="#CDC6C6"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        >
        <TextView
            android:id="@+id/btnEdit"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:text="Edit Profile"
            android:gravity="center"
            android:textColor="#B86100"
            android:textSize="18dp"
            android:layout_marginTop="500dp"
            android:drawableLeft="@drawable/baseline_drive_file_rename_outline_24"
            android:paddingLeft="20dp"
            android:layout_marginLeft="-10dp"
            />
        <TextView
            android:id="@+id/btnChangePass"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:text="Change password"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="#B86100"
            android:drawableLeft="@drawable/baseline_lock_24"
            android:paddingLeft="20dp"
            android:layout_marginLeft="-10dp"
            android:layout_marginTop="15dp"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>